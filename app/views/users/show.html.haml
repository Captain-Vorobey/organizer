.container.rounded.bg-white.mt-5.mb-5
  .row
    .col-md-3.border-right
      .d-flex.flex-column.align-items-center.text-center.p-3.py-5
        %img.rounded-circle.mt-5{:src => "sparrow.jpeg"}/
        = image_tag 'sparrow.jpeg'
        %span.font-weight-bold Egor
        %span.text-black-50 vorob@gmail.ru
        %span
    .col-md-5.border-right
      .p-3.py-5
        .d-flex.justify-content-between.align-items-center.mb-3
          %h4.text-right Profile Settings
        .row.mt-2
          .col-md-6
            %label.labels Name
            %input.form-control{:placeholder => "first name", :type => "text", :value => ""}/
          .col-md-6
            %label.labels Surname
            %input.form-control{:placeholder => "surname", :type => "text", :value => ""}/
        .row.mt-3
          .col-md-12
            %label.labels PhoneNumber
            %input.form-control{:placeholder => "enter phone number", :type => "text", :value => ""}/
          .col-md-12
            %label.labels Address
            %input.form-control{:placeholder => "enter address", :type => "text", :value => ""}/
          .col-md-12
            %label.labels Email ID
            %input.form-control{:placeholder => "enter email id", :type => "text", :value => ""}/
        .row.mt-3
          .col-md-6
            %label.labels City
            %input.form-control{:placeholder => "country", :type => "text", :value => ""}/
        .mt-5.text-center
          %button.btn.btn-primary.profile-button{:type => "button"} Save Profile
    