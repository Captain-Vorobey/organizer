.container
%body.all-color
  %h3.font-weight-bold= @orders
  .container
    %body
      .row
        .col-md-3.border-right
          .d-flex.flex-column.align-items-center.text-center.p-3.py-5
            %span
        .col-md-5.border-right
          .p-3.py-5
            .d-flex.justify-content-between.align-items-center.mb-3
              %h4.text-right Order parameters
            .row.mt-2
              .col-md-6
                = form_for :new do |f|
                  = f.text_field :name
                  = f.submit "Create"
            .row.mt-3
              .col-md-12
                %label.labels Service you have chosen
            .mt-5.text-center
              = link_to 'Check Basket', '/basket', class: 'nav-link'