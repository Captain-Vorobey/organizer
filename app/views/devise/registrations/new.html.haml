%section.section
  .container
    .columns.is-centered
      .column.is-4
        %h2.title.is-2 Sign up
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field
            .control.title
              = f.input :email, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }
          .field
            .control.title
              = f.input :password, required: true, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }
          .field
            .control.title
              = f.input :password_confirmation, required: true, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }
          .field
            .control.title
              = f.input :roles, as: :radio_buttons, collection: Role.all, value_method: :name, required: true
          .field
            .control.title
              = f.button :submit, "Sign up", class:"button is-outlined is-medium"
              = render "devise/shared/links"
              = render "devise/shared/form_wrap"