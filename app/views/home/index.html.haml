!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title Services Section Using Bootstrap 4
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css", :rel => "stylesheet"}/
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/fontawesome.min.css", :rel => "stylesheet"}/
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.css", :rel => "stylesheet"}/
    %link{:href => "https://fonts.googleapis.com/css?family=Poppins:500,700&display=swap", :rel => "stylesheet"}/
  %body
    %section.section-services
      .container
        .row.justify-content-center.text-center
          .col-md-10.col-lg-8
            .header-section
            %h1 Elastic search for services
            = form_for :search_services, url: root_path, method: :get do |form|
              = form.text_field :query, value: params[:search_services].presence && params[:search_services][:query]
              = form.submit 'Search'
              - unless @services.nil?
                - if @services.empty?
                  %h2 No services found matching your query.
                - else
                %h2 Search results
                %table{:style => "width: 100%;"}
                  %thead
                    %tr
                      %th Name
                      %th Description
                  %tbody
                    - @services.each do |service|
                      %tr
                        %td= service.name
                        %td= service.description
                        %td= link_to 'View', service_path(service.id)
                  %tbody
                .row
                  / Start Single Service
                  .col-md-6.col-lg-4
                  - @services.each do |service|
                    .single-service
                      .part-1
                        %i.fab.fa-500px
                        %h3.title 
                          = service.name
                      .part-2
                        %p.description 
                          = service.description
                        %a{:href => "#"}
                          %i.fas.fa-arrow-circle-right>
                          %a.card-link{:href => "/services/#{service.id}"} Read More
                  / / End Single Service
                  link_to 'View', service_path(service.id)