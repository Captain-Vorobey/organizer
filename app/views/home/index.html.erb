<% @services.each do |service| %>
    <ul class="list-group" style="display: inline-block;">
      <li class="list-group-item" style="width: 300px;">
        <div class="card">
          <div class="card-header">
            Service
          </div>
          <div class="card-body">
            <div class="card-title">
              <%= service.name %>
            </div>
            <div class="card-text">
              <%= service.description %>
            </div>
            <a class="card-link" href="/services/<%= service.id %>">Learn more</a>
          </div>
        </div>
      </li>
    </ul>
  <% end %>
  