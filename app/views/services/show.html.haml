.main.text-muted  
  %h3.font-weight-bold= @service.name
  .container
    .row
      .col-4
        .img
          = image_tag 'lisica.png'
      .col-8
        %div.embed-responsive-embed-responsive-16by9
          %iframe
    .row
      .col-4
        %br
        %ul.attributes-list
          %li
            .attribute-name Name
            = @service.name
          %li
            .attribute-name description
            = @service.description
          %li
            .attribute-name.yellow Go to basket
      .col-8
        %br
        .text-justify= @service.description
        %br
          = link_to 'Link to Company', '/company'