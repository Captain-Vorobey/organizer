.box
  %article.media
    .media-content
      .content
        %p
          %strong
            = comment.user.name
            = image_tag(comment.user.avatar_thumbnail) if @user.avatar.attached?
            \:
          = comment.comment
    = link_to 'Delete', [comment.service, comment],                                     
      method: :delete, class: "button is-danger", data: { confirm: 'Are you sure?' } 