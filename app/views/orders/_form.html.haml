= simple_form_for(@order) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  .form-inputs
    = f.input :name
    = f.select :start_time, @beginArray
    = f.label "Duration of your order is #{@time.length.hour} hour : #{@time.length.min} min"
    = f.association :user
    = f.association :service
    = f.button :submit, 'Create time'
