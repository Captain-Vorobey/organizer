= simple_form_for(@time_limit) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  .form-inputs
    = f.input :start_time
    = f.input :end_time
    = f.input :length
    = f.association :user
    = f.association :service
  .form-actions
    = f.button :submit
